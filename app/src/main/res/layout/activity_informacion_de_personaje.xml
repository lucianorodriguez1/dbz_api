<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformacionDePersonaje">

    <!-- ID -->
    <TextView
        android:id="@+id/id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_label"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Name -->
    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintTop_toBottomOf="@id/id_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/id_label"
        app:layout_constraintStart_toEndOf="@+id/name_label"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Ki -->
    <TextView
        android:id="@+id/ki_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ki:"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/ki_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintStart_toEndOf="@+id/ki_label"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Max Ki -->
    <TextView
        android:id="@+id/max_ki_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Ki:"
        app:layout_constraintTop_toBottomOf="@id/ki_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/max_ki_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/ki_label"
        app:layout_constraintStart_toEndOf="@+id/max_ki_label"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Race -->
    <TextView
        android:id="@+id/race_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race:"
        app:layout_constraintTop_toBottomOf="@id/max_ki_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/race_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/max_ki_label"
        app:layout_constraintStart_toEndOf="@+id/race_label"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Gender -->
    <TextView
        android:id="@+id/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        app:layout_constraintTop_toBottomOf="@id/race_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/gender_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/race_label"
        app:layout_constraintStart_toEndOf="@+id/gender_label"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        app:layout_constraintTop_toBottomOf="@id/gender_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/description_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/gender_label"
        app:layout_constraintStart_toEndOf="@+id/description_label"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Image -->

    <!-- deletedAt -->

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_goku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_label" />

    <TextView
        android:id="@+id/deletedAt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="deletedAt:"
        app:layout_constraintTop_toBottomOf="@id/character_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/deletedAt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        app:layout_constraintTop_toBottomOf="@id/character_image"
        app:layout_constraintStart_toEndOf="@+id/deletedAt_label"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>