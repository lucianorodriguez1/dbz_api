<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoficha"
    tools:context=".InformacionDePersonaje">

    <include
        android:id="@+id/toolbar"
        layout="@layout/primary_layout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/contenedorImagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/fondo1"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo1"> <!-- Usa el drawable aquÃ­ -->

            <ImageView
                android:id="@+id/imgPersonaje"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ic_person" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/contenedorTextos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/fondoficha"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenedorImagen">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:padding="8dp"
            android:textColor="@color/letrasFicha"
            android:textSize="24dp"
            android:textStyle="bold"
            tools:text="Nombre"></TextView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:padding="16sp"
            android:rowCount="6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginStart="12dp"
                android:text="Base Ki"
                android:textColor="@color/letrasFicha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/baseKi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/letrasFicha"
                tools:text="10000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginStart="12dp"
                android:text="Total Ki"
                android:textColor="@color/letrasFicha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalKi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/letrasFicha"
                tools:text="90 septillon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginStart="12dp"
                android:text="Race"
                android:textColor="@color/letrasFicha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginStart="12dp"
                android:textColor="@color/letrasFicha"
                tools:text="Saiyan" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginEnd="12dp"
                android:text="Afilliation"
                android:textColor="@color/letrasFicha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/affiliation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/letrasFicha"
                tools:text="Z fighter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginEnd="12dp"
                android:text="Gender"
                android:textColor="@color/letrasFicha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_marginEnd="12dp"
                android:textColor="@color/letrasFicha"
                tools:text="Male" />

        </GridLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:padding="16sp"
                android:textColor="@color/letrasFicha"
                tools:text="Maestro de artes marciales y mentor de Goku. Conocido bajo el nombre de Muten Rosh..." />


        </ScrollView>


    </LinearLayout>

    <include
        layout="@layout/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>